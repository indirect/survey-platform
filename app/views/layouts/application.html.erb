<!DOCTYPE html>
<html>
  <head>
    <title>NextTrace Survey</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to "/", class: "navbar-item" do %>
            <%= image_tag("nexttrace-logo.svg", width: 40, height: 40) %>
            NextTrace
          <% end %>

          <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbar-burger">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbar-menu" class="navbar-menu">
          <div class="navbar-end">
            <%= link_to "Take Survey", survey_path, class: "navbar-item" %>

            <%= link_to "Public Health", new_user_session_path, class: "navbar-item" %>

            <a class="navbar-item">
              About
            </a>

            <a class="navbar-item">
              Contact
            </a>

            <%- if current_user -%>
              <div class="navbar-item">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "button primary" %>
              </div>
            <%- end -%>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="content">
        <%= yield %>
      </div>
    </section>

    <footer class="footer">
      <div class="content">
        <p>Â© NextTrace 2020 - Present</p>
      </div>
    </footer>
  </body>
</html>
