<h1>Survey Invitations</h1>

<div class="field is-grouped">
  <div class="control">
    <%= link_to "Report positive test and initiate survey", new_agency_invitation_path, class: "button is-link" %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.name %></td>
        <td><%= invitation.email %></td>
        <td><%= invitation.phone %></td>
        <td><%= link_to 'Edit', edit_agency_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', [:agency, invitation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
