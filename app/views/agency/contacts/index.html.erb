<h1>Reported Contacts</h1>

<div class="field is-grouped">
  <div class="control">
    <%= link_to "Report positive test and initiate survey", new_agency_contact_path, class: "button is-link" %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to 'Edit', edit_agency_contact_path(contact), class: "button" %></td>
        <td><%= link_to 'Destroy', [:agency, contact], method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %></td>
        <td>
          <%= form_with(model: [:agency, contact], local: true) do |form| %>
            <%= hidden_field_tag :resend_invitation, true %>
            <%= form.submit "Resend link", class: "button is-link" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
